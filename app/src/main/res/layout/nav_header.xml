<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="30dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userpic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/dummyuser"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="0.5dp" />
                    <TextView
                        android:id="@+id/usernameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/medium"
                        android:text="Johan martins"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_20sdp"/>
                    <TextView
                        android:id="@+id/editprofileTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingTop="0dp"
                        android:paddingBottom="5dp"
                        android:text="Edit Profile"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/editUserProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:src="@drawable/editp" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/fl_count">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_3sdp">
                    <ImageView
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:src="@drawable/bellicon"/>
                </RelativeLayout>
                <TextView
                        android:id="@+id/notificationCountTV"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:background="@drawable/circle_themecolor"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="visible"
                        android:layout_gravity="right|bottom"/>
                </FrameLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:padding="@dimen/_25dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/dashboardLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/dashboard"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="DASHBOARD"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dashboard_add_bill_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/dashboard" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="@string/add_bill_payment"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/meterLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/meters" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="@string/save_meter"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/posLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/usericon" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="MANAGE POS"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/walletLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp">
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/wallet" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="@string/manage_wallet"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/reportLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_reports" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="@string/manage_reports"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/changepassLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/password" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="@string/reset_password"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp"/>
                </LinearLayout>
                <!--<LinearLayout
                    android:id="@+id/notificationsLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/bellicon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:text="NOTIFICATIONS"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/notificationCountTV"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:background="@drawable/circle_themecolor"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone" />
                </LinearLayout>-->
                <LinearLayout
                    android:id="@+id/privacyLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/padding16"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/privacy" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="PRIVACY POLICY"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/contactusLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/contact" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="CONTACT US"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tcLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"

                        android:src="@drawable/terms" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="OUR POLICIES"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/shareappLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/share" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="SHARE APP"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/logoutLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_5sdp">
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/logout" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin16"
                        android:layout_marginLeft="@dimen/margin16"
                        android:fontFamily="@font/medium"
                        android:text="LOG OUT"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>